 -hosts: all                                                              
  tasks:                                                                   
    - apt:                                                                
          name: httpd                                                   
          state: latest                                                  
    - copy:                                                               
          src: /consulting-website-template/                               
          dest: /var/www/html/                                             
                                                                           
    - lineinfile:                                                         
          path: /etc/httpd/conf/httpd.conf                                 
          insertafter: "^#Listen "                                         
          regexp: "^Listen"                                                
          line: "Listen 8080"                                              
                                                                           
    - firewalld:                                                           
          immediate: true                                                  
          permanent: true                                                 
          port: 8081/tcp                                                  
          state: enabled                                                  
                                                                          
    - service:                                                             
           name: httpd                                                     
           state: started 	
