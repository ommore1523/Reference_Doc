9. ng g m sub-folder/module-name --routing


10  implementing i18n


       # install
       "@ngx-translate/core": "^13.0.0",
       "@ngx-translate/http-loader": "^6.0.0",


       #====>>>>>> app-module 
       //i18n 2
       import {TranslateHttpLoader} from '@ngx-translate/http-loader';
       import {TranslateModule,TranslateLoader} from '@ngx-translate/core';
       import { HttpClientModule,HTTP_INTERCEPTORS,HttpClient } from '@angular/common/http';


       # add export function above @gnmodule
       export function HttpLoaderFactory(httpclient:HttpClient){
       return new TranslateHttpLoader(httpclient);
       // return new TranslateHttpLoader(httpclient, env['reverse_proxy_prefix']+"/assets/i18n/", ".json");
       }

       # import 

       TranslateModule.forRoot({
       loader:{
       provide:TranslateLoader,
       useFactory:HttpLoaderFactory,
       deps:[HttpClient]
       }
       })


       #====> app.comp.ts


       # import service 
       import { TranslateService } from '@ngx-translate/core';

       # constructor create
       constructor(public translate: TranslateService) {
       translate.addLangs(['en', 'fr']);
       translate.setDefaultLang('en');
       translate.use('en');
       // const browserLang =translate.getBrowserLang();
       const browserLang = 'en';
       translate.use(browserLang.match(/fr|en/) ? browserLang : 'fr');
       
       }



       # =====> in module componet.ts 
       import { TranslateService } from '@ngx-translate/core';

       # variable  
       modelNam

       # contructor 
       constructor(private translate: TranslateService)

       this.translate.get('objectdetectiontrain').toPromise().then(res => {
       this.modelName=res
       })

       Referenc :  https://www.youtube.com/watch?v=oxigDfDfD8Q

